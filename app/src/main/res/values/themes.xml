<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KusitmsResult" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DBCEDF</item>
        <item name="colorPrimaryDark">#DBCEDF</item>
        <item name="colorAccent">#DBCEDF</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#DBCEDF</item>
    </style>

    <style name="popupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name= "windowActionBar">false</item>
        <item name= "windowNoTitle">true</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="travelog">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="welcome">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="summer">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="hotreview">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="hotreview2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="top_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="travel_route">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Transparent" parent="@style/Theme.AppCompat">
        <!--Titlebar 없애는 옵션
            true : Titlebar x
            false : Titlebar o
        -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


</resources>