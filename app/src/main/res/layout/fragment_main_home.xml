<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Second.MainHome_Fragment"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <View
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/travellog" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        app:auto_cycle="true"
        app:delay="0"
        app:period="1000"
        app:corner_radius="5"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/scroll_wrap" />


    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="이번 여름, 이런 곳은 어떠세요?"
        android:fontFamily="@font/cafe"
        android:textAppearance="@style/summer"/>

    <HorizontalScrollView

        android:layout_below="@+id/text1"
        android:id="@+id/sv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/circle1"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:src="@drawable/circle2"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:src="@drawable/circle3"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/circle5" />

            <ImageView
                android:src="@drawable/circle6"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <ImageView
                android:src="@drawable/circle4"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/sv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cafe"
        android:text="지금 가장 핫한 후기"
        android:textAppearance="@style/hotreview"/>

    <TextView
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nexonmedium"
        android:text="여행자들이 남긴 생생한 후기를 만나보세요"
        android:textAppearance="@style/hotreview2"/>


    <ImageButton
        android:layout_below="@id/sv_layout"
        android:id="@+id/view_more"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/more" />

    <HorizontalScrollView
        android:layout_below="@id/text3"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/user1"
                android:layout_width="200dp"
                android:layout_height="fill_parent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="1dp"
                android:background="#DBCEDF"/>

            <ImageView
                android:src="@drawable/user2"
                android:layout_width="200dp"
                android:layout_height="fill_parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="1dp"
                android:background="#DBCEDF"/>

            <ImageView
                android:src="@drawable/user3"
                android:layout_width="200dp"
                android:layout_height="fill_parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="1dp"
                android:background="#DBCEDF"/>

            <ImageView
                android:src="@drawable/user2"
                android:layout_width="200dp"
                android:layout_height="fill_parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="1dp"
                android:background="#DBCEDF"/>

            <ImageView
                android:src="@drawable/user3"
                android:layout_width="200dp"
                android:layout_height="fill_parent"/>


        </LinearLayout>
    </HorizontalScrollView>



</RelativeLayout>