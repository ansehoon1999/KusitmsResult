<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:baselineAligned="false">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginLeft="148dp"

                android:src="@drawable/mypageword" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textSize="19dp"
                android:layout_marginTop="22dp"
                android:text="Profile"
                android:textColor="#000000"
                android:fontFamily="@font/cafe"/>
            <!--프로필 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ClientFragment5_GoogleProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_launcher_foreground" />
                <TextView
                    android:id="@+id/ClientFragment5_GoogleEmail"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="이메일"
                    android:fontFamily="@font/nexonlight"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="40dp"
                android:text="등록 정보"
                android:bufferType="spannable"
                android:fontFamily="@font/nexonbold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="프로필 보기"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <!--구분선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="프로필 설정"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="40dp"
                android:text="고객지원"
                android:fontFamily="@font/nexonbold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="내가 쓴 후기"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="내가 간 경로"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="이벤트"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="고객 센터"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <Button
                android:id="@+id/MyPage_LogOutButton"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAlignment="textStart"
                android:stateListAnimator="@null"
                android:text="로그 아웃"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/nexonmedium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="1dp"
                android:background="#DBCEDF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:textAlignment="textStart"
                    android:stateListAnimator="@null"
                    android:enabled="false"
                    android:text="버전정보"
                    android:backgroundTint="#ffffff"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:fontFamily="@font/nexonmedium"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="1dp"
                    android:background="#DBCEDF"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginEnd="0dp"
                    android:stateListAnimator="@null"
                    android:text="1.0.0"
                    android:enabled="false"
                    android:textAlignment="viewEnd"
                    android:backgroundTint="#ffffff"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:fontFamily="@font/nexonmedium"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="1dp"
                    android:background="#DBCEDF"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>