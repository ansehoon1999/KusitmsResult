<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">


<LinearLayout
    android:id="@+id/buttonInstead"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shadow"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/scrap_profile"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        android:src="@drawable/write"/>


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="당신의 발자취를 \n추억에 남겨보세요"
            android:fontFamily="@font/cafe"
            android:textAppearance="@style/summer"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/evaluation_item_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nexonmedium"
            android:text="사당"
            android:textAppearance="@style/hotreview2"
            android:textSize="15sp" />


    </LinearLayout>







</LinearLayout>


</RelativeLayout>